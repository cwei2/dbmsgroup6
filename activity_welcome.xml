<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomeActivity"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:id="@+id/">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/Homepage1"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/App_Name_1"
            android:id="@+id/App_Name"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:textSize="35dp"
            android:textStyle="bold|italic"
            android:textColor="#f7ffeb"
            android:layout_alignParentTop="true"
            android:singleLine="false"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Mission_1"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="190dp"
            android:textSize="20dp"
            android:textColor="#020002"
            android:autoText="false"
            android:layout_marginLeft="60dp"
            android:layout_alignEnd="@+id/App_Name" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/Welcome_Page_Btn"
            android:id="@+id/Welcome_Page_Btn"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

</LinearLayout>
